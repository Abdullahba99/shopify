{%- style -%}
  .footer {
    background: linear-gradient(to bottom right, #111827, #1f2937);
    color: white;
    padding: 3rem 0;
  }
  .footer__inner {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  .footer__col {
    text-align: center;
  }
  @media (min-width: 768px) {
    .footer__col:first-child {
      text-align: start;
    }
    .footer__col:last-child {
      text-align: end;
    }
    [dir="rtl"] .footer__col:first-child {
      text-align: end;
    }
    [dir="rtl"] .footer__col:last-child {
      text-align: start;
    }
  }
  .footer__logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  @media (min-width: 768px) {
    .footer__logo {
      justify-content: flex-start;
    }
    [dir="rtl"] .footer__logo {
      justify-content: flex-end;
    }
  }
  .footer__logo-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  .footer__social-link--tiktok {
    background: #000000;
  }
  .footer__social-link--location {
    background: #ef4444;
  }
  .footer__logo-text {
    font-weight: 700;
    font-size: 1.25rem;
  }
  .footer__logo-text--pink {
    color: var(--color-lilia);
  }
  .footer__logo-text--blue {
    color: var(--color-adam);
  }
  .footer__tagline {
    color: #9ca3af;
    font-size: 0.875rem;
  }
  .footer__heading {
    font-weight: 600;
    margin-bottom: 1rem;
  }
  .footer__links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .footer__link {
    color: #9ca3af;
    text-decoration: none;
  }
  .footer__social {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  @media (min-width: 768px) {
    .footer__social {
      justify-content: flex-end;
    }
    [dir="rtl"] .footer__social {
      justify-content: flex-start;
    }
  }
  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 9999px;
    color: white;
  }
  .footer__social-link--whatsapp {
    background: #16a34a;
  }
  .footer__social-link--instagram {
    background: linear-gradient(to bottom right, #9333ea, #ec4899);
  }
  .footer__social-link--facebook {
    background: #2563eb;
  }
  .footer__social-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  .footer__bottom {
    border-top: 1px solid #374151;
    padding-top: 2rem;
    text-align: center;
  }
  .footer__copyright {
    color: #9ca3af;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  .footer__heart {
    width: 1rem;
    height: 1rem;
    color: #f87171;
  }
{%- endstyle -%}

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__grid">
      <div class="footer__col">
        <div class="footer__logo">
          <svg class="footer__logo-icon" viewBox="0 0 24 24" fill="none" stroke-width="2">
            <defs>
              <linearGradient id="logoGradientFooter" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color: var(--color-lilia)" />
                <stop offset="50%" style="stop-color: var(--color-lilia)" />
                <stop offset="50%" style="stop-color: var(--color-adam)" />
                <stop offset="100%" style="stop-color: var(--color-adam)" />
              </linearGradient>
            </defs>
            <path stroke="url(#logoGradientFooter)" d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/>
          </svg>
          <span class="footer__logo-text"><span class="footer__logo-text--pink">{% if request.locale.iso_code == 'ar' %}سبيستون{% else %}Space{% endif %}</span><span class="footer__logo-text--blue">{% if request.locale.iso_code == 'ar' %} تويز{% else %}toon Toys{% endif %}</span></span>
        </div>
        <p class="footer__tagline">{{ 'footer.tagline' | t }}</p>
      </div>

      <div class="footer__col">
        <h4 class="footer__heading">{{ 'footer.quick_links' | t }}</h4>
        <div class="footer__links">
          <a href="#home" class="footer__link">{{ 'navigation.home' | t }}</a>
          <a href="#inventory" class="footer__link">{{ 'navigation.shop' | t }}</a>
          <a href="#about" class="footer__link">{{ 'navigation.about' | t }}</a>
        </div>
      </div>

      <div class="footer__col">
        <h4 class="footer__heading">{{ 'footer.connect' | t }}</h4>
        <div class="footer__social">
          {%- if settings.social_whatsapp != blank -%}
            <a href="https://wa.me/{{ settings.social_whatsapp | remove: '+' | remove: ' ' | remove: '-' }}" class="footer__social-link footer__social-link--whatsapp" target="_blank" rel="noopener">
