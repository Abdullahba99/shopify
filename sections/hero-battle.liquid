{%- style -%}
  .hero-battle {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    padding-top: 4rem;
    overflow: hidden;
  }
  .hero-battle__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, var(--color-lilia-light), white 50%, var(--color-adam-light));
    opacity: 0.3;
  }
  .hero-battle__inner {
    position: relative;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 3rem 1rem;
  }
  .hero-battle__headline {
    text-align: center;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text);
  }
  @media (min-width: 768px) {
    .hero-battle__headline {
      font-size: 3rem;
      margin-bottom: 3rem;
    }
  }
  .hero-battle__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .hero-battle__grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }
  .hero-battle__card {
    position: relative;
    border-radius: 1.5rem;
    padding: 1.5rem;
    border: 2px solid;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
  }
  @media (min-width: 768px) {
    .hero-battle__card {
      padding: 2rem;
    }
  }
  .hero-battle__card--lilia {
    background: linear-gradient(to bottom right, var(--color-lilia-light), white);
    border-color: rgba(236, 72, 153, 0.2);
  }
  .hero-battle__card--adam {
    background: linear-gradient(to bottom right, var(--color-adam-light), white);
    border-color: rgba(59, 130, 246, 0.2);
  }
  .hero-battle__badge {
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.375rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 700;
    color: white;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  .hero-battle__badge--lilia {
    background: var(--color-lilia);
  }
  .hero-battle__badge--adam {
    background: var(--color-adam);
  }
  .hero-battle__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding-top: 1rem;
  }
  .hero-battle__avatar {
    position: relative;
    width: 10rem;
    height: 10rem;
    margin-bottom: 1.5rem;
  }
  @media (min-width: 768px) {
    .hero-battle__avatar {
      width: 13rem;
      height: 13rem;
    }
  }
  .hero-battle__avatar-bg {
    position: absolute;
    inset: 0;
    border-radius: 9999px;
    animation: pulse-soft 2s infinite;
  }
  .hero-battle__avatar-bg--lilia {
    background: linear-gradient(to bottom right, rgba(236, 72, 153, 0.3), var(--color-lilia-light));
  }
  .hero-battle__avatar-bg--adam {
    background: linear-gradient(to bottom right, rgba(59, 130, 246, 0.3), var(--color-adam-light));
  }
  .hero-battle__avatar-inner {
    position: absolute;
    inset: 0.5rem;
    border-radius: 9999px;
    background: linear-gradient(to bottom right, #f3f4f6, white);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .hero-battle__avatar-icon {
    width: 5rem;
    height: 5rem;
    color: #9ca3af;
  }
  @media (min-width: 768px) {
    .hero-battle__avatar-icon {
      width: 6rem;
      height: 6rem;
    }
  }
  .hero-battle__avatar-icon--lilia {
    color: var(--color-lilia);
  }
  .hero-battle__avatar-icon--adam {
    color: var(--color-adam);
  }
  .hero-battle__name {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  @media (min-width: 768px) {
    .hero-battle__name {
      font-size: 1.875rem;
    }
  }
  .hero-battle__name--lilia {
    color: #9d174d;
  }
  .hero-battle__name--adam {
    color: #1e40af;
  }
  .hero-battle__subtitle {
    color: #6b7280;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }
  @media (min-width: 768px) {
    .hero-battle__subtitle {
      font-size: 1rem;
    }
  }
  .hero-battle__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border-radius: 1rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    text-decoration: none;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .hero-battle__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }
  .hero-battle__btn--lilia {
    background: var(--color-lilia);
  }
  .hero-battle__btn--adam {
    background: var(--color-adam);
  }
  .hero-battle__vs {
    display: none;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
  @media (min-width: 768px) {
    .hero-battle__vs {
      display: flex;
    }
  }
  .hero-battle__vs-badge {
    background: linear-gradient(to bottom right, #fbbf24, #f97316);
    color: white;
    width: 4rem;
    height: 4rem;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.25rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border: 4px solid white;
    animation: bounce-soft 2s infinite;
  }
  @keyframes pulse-soft {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }
  @keyframes bounce-soft {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
{%- endstyle -%}

<section id="home" class="hero-battle">
  <div class="hero-battle__bg"></div>
  
  <div class="hero-battle__inner">
    <h1 class="hero-battle__headline">{{ 'hero.headline' | t }}</h1>

    <div class="hero-battle__grid">
      <!-- Team Lilia -->
      <div class="hero-battle__card hero-battle__card--lilia">
        <div class="hero-battle__badge hero-battle__badge--lilia">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11.562 3.266a.5.5 0 0 1 .876 0L15.39 8.87a1 1 0 0 0 1.516.294L21.183 5.5a.5.5 0 0 1 .798.519l-2.834 10.246a1 1 0 0 1-.956.734H5.81a1 1 0 0 1-.957-.734L2.02 6.02a.5.5 0 0 1 .798-.519l4.276 3.664a1 1 0 0 0 1.516-.294z"/>
            <path d="M5 21h14"/>
          </svg>
          <span>{{ 'hero.team_lilia' | t }}</span>
        </div>
        
        <div class="hero-battle__content">
          <div class="hero-battle__avatar">
            <div class="hero-battle__avatar-bg hero-battle__avatar-bg--lilia"></div>
            <div class="hero-battle__avatar-inner">
              <svg class="hero-battle__avatar-icon hero-battle__avatar-icon--lilia" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
            </div>
          </div>

          <h2 class="hero-battle__name hero-battle__name--lilia">{{ 'hero.lilia_name' | t }}</h2>
          <p class="hero-battle__subtitle">{{ 'hero.lilia_subtitle' | t }}</p>

          <a href="#inventory" class="hero-battle__btn hero-battle__btn--lilia" onclick="switchTab('lilia')">
            {{ 'hero.lilia_button' | t }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m6 9 6 6 6-6"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Team Adam -->
      <div class="hero-battle__card hero-battle__card--adam">
        <div class="hero-battle__badge hero-battle__badge--adam">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11.562 3.266a.5.5 0 0 1 .876 0L15.39 8.87a1 1 0 0 0 1.516.294L21.183 5.5a.5.5 0 0 1 .798.519l-2.834 10.246a1 1 0 0 1-.956.734H5.81a1 1 0 0 1-.957-.734L2.02 6.02a.5.5 0 0 1 .798-.519l4.276 3.664a1 1 0 0 0 1.516-.294z"/>
            <path d="M5 21h14"/>
          </svg>
          <span>{{ 'hero.team_adam' | t }}</span>
        </div>
        
        <div class="hero-battle__content">
          <div class="hero-battle__avatar">
            <div class="hero-battle__avatar-bg hero-battle__avatar-bg--adam"></div>
            <div class="hero-battle__avatar-inner">
              <svg class="hero-battle__avatar-icon hero-battle__avatar-icon--adam" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
            </div>
          </div>

          <h2 class="hero-battle__name hero-battle__name--adam">{{ 'hero.adam_name' | t }}</h2>
          <p class="hero-battle__subtitle">{{ 'hero.adam_subtitle' | t }}</p>

          <a href="#inventory" class="hero-battle__btn hero-battle__btn--adam" onclick="switchTab('adam')">
            {{ 'hero.adam_button' | t }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m6 9 6 6 6-6"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <div class="hero-battle__vs">
      <div class="hero-battle__vs-badge">{{ 'hero.vs' | t }}</div>
    </div>
  </div>
</section>

