{%- style -%}
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid #e5e7eb;
  }
  .header__inner {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
    gap: 1rem;
  }
  .header__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .header__logo-icon {
    width: 2rem;
    height: 2rem;
  }
  .header__logo-icon .logo-pink {
    color: var(--color-lilia);
  }
  .header__logo-icon .logo-blue {
    color: var(--color-adam);
  }
  .header__logo-text {
    font-weight: 700;
    font-size: 1.25rem;
  }
  .header__logo-text--pink {
    color: var(--color-lilia);
  }
  .header__logo-text--blue {
    color: var(--color-adam);
  }
  .header__nav {
    display: none;
    align-items: center;
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .header__nav {
      display: flex;
    }
  }
  .header__nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: #6b7280;
    text-decoration: none;
  }
  .header__actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .header__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    border: 1px solid #e5e7eb;
    background: transparent;
    cursor: pointer;
  }
  .header__language {
    position: relative;
  }
  .header__language-badge {
    position: absolute;
    bottom: -2px;
    right: -2px;
    font-size: 0.625rem;
    font-weight: 700;
    background: var(--color-lilia);
    color: white;
    padding: 0 0.25rem;
    border-radius: 0.25rem;
  }
{%- endstyle -%}

<header class="header" role="banner">
  <div class="header__inner">
    <a href="{{ routes.root_url }}" class="header__logo">
      <svg class="header__logo-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <defs>
          <linearGradient id="logoGradientHeader" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color: var(--color-lilia)" />
            <stop offset="50%" style="stop-color: var(--color-lilia)" />
            <stop offset="50%" style="stop-color: var(--color-adam)" />
            <stop offset="100%" style="stop-color: var(--color-adam)" />
          </linearGradient>
        </defs>
        <path stroke="url(#logoGradientHeader)" d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/>
        <path stroke="var(--color-lilia)" d="M5 3v4"/><path stroke="var(--color-lilia)" d="M3 5h4"/>
        <path stroke="var(--color-adam)" d="M19 17v4"/><path stroke="var(--color-adam)" d="M17 19h4"/>
      </svg>
      <span class="header__logo-text"><span class="header__logo-text--pink">{% if request.locale.iso_code == 'ar' %}سبيستون{% else %}Space{% endif %}</span><span class="header__logo-text--blue">{% if request.locale.iso_code == 'ar' %} تويز{% else %}toon Toys{% endif %}</span></span>
    </a>

    <nav class="header__nav">
      <a href="#home" class="header__nav-link">{{ 'navigation.home' | t }}</a>
      <a href="#inventory" class="header__nav-link">{{ 'navigation.shop' | t }}</a>
      <a href="#about" class="header__nav-link">{{ 'navigation.about' | t }}</a>
    </nav>

    <div class="header__actions">
      {%- if shop.published_locales.size > 1 -%}
        <div class="header__language">
          <form method="post" action="{{ routes.localization_path }}" class="shopify-localization-form">
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" name="locale_code" value="{% if request.locale.iso_code == 'en' %}ar{% else %}en{% endif %}">
            <button type="submit" class="header__btn" aria-label="Change language">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/>
              </svg>
              <span class="header__language-badge">{{ request.locale.iso_code | upcase }}</span>
            </button>
          </form>
        </div>
      {%- endif -%}
      <a href="{{ routes.cart_url }}" class="header__btn" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
        </svg>
        {%- if cart.item_count > 0 -%}
          <span class="header__cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": []
}
{% endschema %}
