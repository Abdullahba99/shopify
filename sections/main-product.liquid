{%- style -%}
  .main-product {
    padding: 6rem 1rem 3rem;
    min-height: 80vh;
  }
  .main-product__inner {
    max-width: 80rem;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .main-product__inner {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }
  .main-product__gallery {
    aspect-ratio: 1;
    border-radius: 1.5rem;
    overflow: hidden;
    background: linear-gradient(to bottom right, #f9fafb, #f3f4f6);
  }
  .main-product__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .main-product__info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .main-product__title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
  }
  .main-product__price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-lilia);
  }
  .main-product__description {
    color: #6b7280;
    line-height: 1.75;
  }
  .main-product__form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .main-product__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 1rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: white;
    background: var(--color-lilia);
    border: none;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .main-product__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  .main-product__btn:disabled {
    background: #d1d5db;
    cursor: not-allowed;
  }
  .main-product__btn:disabled:hover {
    transform: none;
    box-shadow: none;
  }
{%- endstyle -%}

<section class="main-product">
  <div class="main-product__inner">
    <div class="main-product__gallery">
      {%- if product.featured_image != blank -%}
        <img 
          class="main-product__image"
          src="{{ product.featured_image | image_url: width: 800 }}"
          alt="{{ product.featured_image.alt | escape }}"
          width="800"
          height="800"
        >
      {%- endif -%}
    </div>

    <div class="main-product__info">
      <h1 class="main-product__title">{{ product.title }}</h1>
      
      <p class="main-product__price">{{ product.price | money }}</p>

      {%- if product.description != blank -%}
        <div class="main-product__description">
          {{ product.description }}
        </div>
      {%- endif -%}

      <form class="main-product__form" action="/cart/add" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <input type="hidden" name="quantity" value="1">
        
        <button type="submit" class="main-product__btn" {% unless product.available %}disabled{% endunless %}>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="8" cy="21" r="1"/>
            <circle cx="19" cy="21" r="1"/>
            <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/>
          </svg>
          {%- if product.available -%}
            {{ 'products.add_to_cart' | t }}
          {%- else -%}
            {{ 'products.out_of_stock' | t }}
          {%- endif -%}
        </button>
      </form>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Page",
  "tag": "section",
  "class": "section-main-product",
  "settings": []
}
{% endschema %}
